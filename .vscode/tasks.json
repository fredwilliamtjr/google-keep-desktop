{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Executar Electron (Dev)",
			"type": "shell",
			"command": "npm start",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Limpar e Gerar Execut√°vel",
			"type": "shell",
			"command": "rm -rf out && npm run make",
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"windows": {
				"command": "powershell -NoProfile -ExecutionPolicy Bypass -Command Remove-Item -Path 'out' -Recurse -Force -ErrorAction SilentlyContinue; npm run make"
			}
		}
	]
}